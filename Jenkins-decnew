pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'fa44a339-0773-4dcc-adf3-a3b4c7356639', url: 'https://github.com/sivakethireddy/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.26.79:/home/ec2-user/apache-tomcat-10.1.28/webapps/
                    
                    ssh ec2-user@172.31.26.79 /home/ec2-user/apache-tomcat-10.1.28/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.26.79 /home/ec2-user/apache-tomcat-10.1.28/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
